@model family.tichi.org.Models.View.HomeSignInViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>Family</title>
    
    <!-- jQuery -->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    
    <!-- jQuery UI -->
    <link rel="Stylesheet" href="@Url.Content("~/Content/themes/custom-theme/jquery-ui-1.8.18.custom.css")" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js"></script>

    <!-- Basic site css -->
    <link rel="Stylesheet" href="@Url.Content("~/Content/themes/custom-theme/Site.css")" />

    <!-- Unobtrusive form validation -->
    <script src="http://ajax.microsoft.com/ajax/jquery.validate/1.7/jquery.validate.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <!-- General scripts -->
    <script type="text/javascript">
        function createBanner() {
            $("#title").position({
                my: "left center",
                at: "left center",
                of: $("#banner"),
                offset: "25 0",
                collision: "none none"
            });
            $("#signUpButton").position({
                my: "right center",
                at: "right center",
                of: $("#banner"),
                offset: "-25 0",
                collision: "none none"
            });
        }

        function doLayout() {
            $("#banner")
                .width($(window).width() - 12)
                .position({
                    my: "left top",
                    at: "left top",
                    of: $(window),
                    offset: "5 5",
                    collision: "none none"
                });
            $("#summary")
                .width($(window).width() - 412)
                .position({
                    my: "left top",
                    at: "left bottom",
                    of: $("#banner"),
                    collision: "none none"
                });
            $("#signin").position({
                my: "right top",
                at: "right bottom",
                of: $("#banner"),
                collision: "none none"
            });
            $("#divider").position({
                my: "right top",
                at: "left top",
                of: $("#signin"),
                offset: "-25 5",
                collision: "none none"
            });
        }

        $(document).ready(function () {
            // Adjust the states of the sign up button.
            $("#signUpButton")
                .button()
                .hover(
                    function () {
                        $(this)
                            .removeClass("ui-state-active")
                            .addClass("ui-state-hover");
                    },
                    function () {
                        $(this)
                            .removeClass("ui-state-hover")
                            .addClass("ui-state-active");
                    }
                );

            // Set up the buttons.
            $("input[type=submit]").button();

            // Create the banner.
            createBanner();

            // Set up the layout.
            doLayout();
        });

        $(window).resize(function() {
            // Re-create the banner.
            createBanner();

            // Set up the layout.
            doLayout();
        });
    </script>
</head>
<body style="font-size: 0.75em;">
    <header>
        <div id="banner" class="ui-helper-reset ui-helper-clearfix ui-widget ui-widget-header ui-corner-all" style="height: 100px; min-width: 800px;">
            <div id="title" style="font-size: 1.5em; width: 500px;">f a m i l y . t i c h i . o r g</div>
            <a id="signUpButton" class="ui-state-active" style="font-size: 1.15em;" href="#">Sign Up</a>
        </div>
    </header>
    <section>
        <div id="summary" class="ui-helper-reset ui-helper-clearfix ui-widget">
            <p style="font-size: 1.1em; width: 50%; min-width: 400px; margin-left: auto; margin-right: auto; text-align: center;">
                <strong>Welcome!</strong>
            </p>
            <p style="text-align: center; min-width: 400px; width: 50%; margin-left: auto; margin-right: auto;">
                Here at family.tichi.org we are dedicated to helping you keep in contact with your friends and family. We offer the ability to define your family tree of those using our service, share wishlists, and blog posts.
            </p>
        </div>
        <div id="divider" class="ui-helper-reset ui-helper-clearfix ui-state-hover" style="border: 0px; width: 1px; height: 200px;"></div>
        <div id="signin" class="ui-helper-reset ui-helper-clearfix ui-widget" style="width: 370px;">
            <p>
            @using (Html.BeginForm())
            {
                @Html.LabelFor(model => model.Email)<br />
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)<br />
                @Html.LabelFor(model => model.Password)<br />
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)<br /><br />
                <input type="submit" value="Sign In" />
            }
            </p>
        </div>
    </section>
</body>
</html>
